{
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "semi": ["error", "always"],
      "indent": ["error", 2],
      "quotes": ["error", "single"]
    }
  }